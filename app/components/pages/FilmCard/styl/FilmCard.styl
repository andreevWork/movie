@import 'colors'
@import 'sizes'

$table-width = 600px

.film-card
  &__props
    max-height 5em
    max-width 250px
    overflow hidden

  &__data
    width 90%
    padding-top 50px
    min-width $table-width
    border-top 1px solid lighten($brand-bg-color, 10%)
    margin 100px auto

    table
      width 100%

      td
        padding 5px

  &__poster
    vertical-align top
    text-align center

    img
      width 300px