@import 'colors'
@import 'sizes'

$form-width = $min-width - 200px
$form-height = 40px
$input-width = $form-width * 2 / 3
$submit-width = $form-width * 1 / 3

.main-page
  &__search
    &-form
      width $form-width
      height $form-height
      margin 150px auto
      background rgba($brand-bg-color, .7)

    &-input
      width $input-width
      padding 10px 25px
      float left
      height $form-height
      outline 0
      background transparent
      border-radius 3px 0 0 3px
      border 1px solid $brand-color

      &:focus
        outline 0
        background transparent

    &-submit
      width $submit-width
      position relative
      float right
      padding 0
      cursor pointer
      height $form-height
      background transparent
      border 1px solid $brand-color
      border-radius 0 3px 3px 0
      transition all 0.2s

      &:hover
        background $brand-color
        color $brand-bg-color

      &:active
        box-shadow 0 0 12px 0 rgba($brand-color 1)

      &:focus
        outline 0